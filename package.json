{
  "name": "privacy-guardian",
  "version": "1.0.0",
  "description": "Enterprise privacy application for screenshot analysis",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon src/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "screenshot-monitor": "node src/screenshot-monitor.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "multer": "^1.4.4",
    "cors": "^2.8.5",
    "chokidar": "^3.5.3",
    "screenshot-desktop": "^1.12.7",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
